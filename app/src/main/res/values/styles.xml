<resources>

    <!-- Base application theme. -->
    <style name="CryptopeaAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Default_Button</item>
        <item name="android:editTextStyle">@style/Default_EditText</item>
        <item name="android:textViewStyle">@style/Default_TextView</item>
    </style>

    <style name="CryptopeaAppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Default_Button</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Default_TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/global_secondary_text_color</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">@color/global_text_shadow</item>
    </style>

    <style name="Default_TextView_Dark" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/global_secondary_text_color</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">@color/global_text_shadow_white</item>
    </style>

    <style name="Default_EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/global_text_color</item>
        <item name="android:textColorHint">@color/global_secondary_text_color</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
    </style>

    <style name="Default_Button" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/LightPrimaryColor</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:minWidth">50dip</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">@color/global_text_shadow</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CryptopeaAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CryptopeaAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
